  "version": "0.2.0",
  "configurations": [
    {
      "name": "hologram-cmd",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/hologram/main.go",
      "args": ["me"]
    },
    {
      "name": "hologram-agent",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/hologram-agent",
      "args": [
        "--conf", "${workspaceFolder}/agent.json",
        "--debug"
      ],
      // "sudo": true,
      "preLaunchTask": "rm_sock"
    }
  ]
}